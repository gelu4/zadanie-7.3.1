{
  "name": "zadanie-7.3.1",
  "version": "1.0.0",
  "description": "https://gelu4.github.io/zadanie-7.3.1/",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "glob-run nu-html-checker *.html",
    "build":"npm run build:rmrf && npm run build:sass && npm run build:autoprefixer && npm run test",
    "build:rmrf": "rm -rf libs", 
    "build:sass": "sass --sourcemap=none --update sass:libs",
    "build:autoprefixer": "autoprefixer-cli libs/style.css",  
    "watch": "parallelshell \"npm run watch:rmrf\" \"npm run watch:sass\" \"npm run watch:autoprefixer\" \"npm run watch:browsersync\" ",
    "watch:rmrf": "rm -rf libs",  
    "watch:sass": "sass --watch sass:libs",
    "watch:autoprefixer": "onchange -d 100 libs/style.css -- autoprefixer-cli -o libs/style.prefixed.css libs/style.css",
    "watch:browsersync": "node_modules/.bin/browser-sync start --server --files\" \"libs/*.css\" \"*.html\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gelu4/zadanie-7.3.1.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gelu4/zadanie-7.3.1/issues"
  },
  "homepage": "https://github.com/gelu4/zadanie-7.3.1#readme",
  "dependencies": {
    "browser-sync": "^2.18.13",
    "glob-run": "^0.1.6",
    "onchange": "^3.2.1",
    "rimraf": "^2.6.2"
  }
}
